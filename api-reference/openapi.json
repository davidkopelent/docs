openapi: 3.1.0
x-stoplight:
  id: iksep32dvtept
info:
  contact:
    name: Storyous
    email: contact@teya.com
    url: 'https://github.com/saltpay/eposstoryous-checks-api'
  description: Checks service
  title: eposstoryous-checks-api
  version: '1.0'
servers:
  - url: 'https://eposstoryous-checks-api.platform-dev.eu-west-1.salt'
    description: Staging
  - url: 'https://eposstoryous-checks-api.platform-prd.eu-west-1.salt'
    description: Production
  - url: 'http://localhost:8080'
    description: Local
x-kong-plugin-path-prefix:
  config:
    path_prefix: /eposstoryous-checks-api/
paths:
  /eposstoryous-checks-api/status:
    get:
      summary: Status
      tags: []
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: string
        '500':
          description: Internal Server Error
      operationId: get-status
      description: status
    parameters: []
  /eposstoryous-checks-api/metrics:
    get:
      summary: Metrics
      tags: []
      responses:
        '200':
          description: ''
          content:
            application/json:
              schema:
                type: object
                properties: {}
        '500':
          description: Internal Server Error
      operationId: get-metrics
      description: metrics
    parameters: []
  /eposstoryous-checks-api/library.js:
    parameters: []
    get:
      summary: Get library code
      operationId: get-library
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: string
              examples: {}
        '500':
          description: Internal Server Error
      parameters: []
      description: get library
  '/eposstoryous-checks-api/{merchantPlaceId}/{deskId}':
    parameters:
      - schema:
          type: string
        name: merchantPlaceId
        in: path
        required: true
        description: concatenation of merchantId and PlaceId
      - schema:
          type: string
        name: deskId
        in: path
        required: true
    get:
      summary: Get desk checks
      operationId: get-desk-checks-by-merchantPlaceId-and-deskId
      responses:
        '200':
          description: OK
          content:
            application/xml:
              schema:
                type: object
                properties:
                  '':
                    type: object
              examples: {}
        '500':
          description: Internal Server Error
      parameters: []
      description: get desk checks by merchantPlaceId and deskId
  '/eposstoryous-checks-api/{merchantPlaceId}/pay/{checkId}':
    parameters:
      - schema:
          type: string
        name: merchantPlaceId
        in: path
        required: true
      - schema:
          type: string
        name: checkId
        in: path
        required: true
    post:
      summary: ''
      operationId: pay-checks-for-merchant-and-place
      responses:
        '204':
          description: No Content
      description: pay checks for merchant and place
components:
  schemas: {}